<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://unicons.iconscout.com/release/v4.0.0/css/line.css">
    <link rel="stylesheet" href="css/style2.css">
    <title>Login</title>
</head>
<body>
    
    <div class="container">
        <div class="forms">
            <div class="form login">
                <span class="title">Login</span>

                <form action="/auth/signin" method="POST">
                {{#if message }}
        <h4 class="errorMsg">{{message}}</h4>
        {{/if}}
                    <div class="input-field">
                        <input type="email" placeholder="Email" name="email" required>
                        <i class="uil uil-envelope icon"></i>
                    </div>
                    <div class="input-field">
                        <input type="password" placeholder="Password" name="password" required>
                        <i class="uil uil-lock icon"></i>
                        <i class="uil uil-eye-slash showHidePw"></i>
                    </div>

                    <div class="checkbox-text">
                        <div class="checkbox-content">
                            <input type="checkbox" id="logCheck">
                            <label for="logCheck" class="text">Remember me</label>
                        </div>
                        
                        <a href="forgotPass" class="text">Forgot password?</a>
                    </div>

                    <div class="input-field button">
                        <input class="btn" type="submit" value="Login">
                    </div>
                </form>

                <div class="login-signup">
                    <span class="text">Not a member?
                        <a href="#" class="text signup-link">Signup now</a>
                    </span>
                </div>
            </div>

            <!-- Registration Form -->
            <div class="form signup">
                <span class="title">Registration</span>
                {{#if message }}
                <h4 class="errorMsg">{{message}}</h4>
                {{/if}}
                <form action="/auth/signup" method="POST" id="signup-form" >
                    <div class="input-field">
                        <input type="text" placeholder="Username" name="username" required>
                        <i class="uil uil-user"></i>
                    </div>
                    <div class="input-field">
                         <input type="email" placeholder="Email" name="email" required>
                        <i class="uil uil-envelope icon"></i>
                    </div>
                    <div class="input-field">
                        <input type="password" placeholder="Password" minlength="8" maxlength="28" name="password" required>
                        <i class="uil uil-lock icon"></i>
                       <i class="uil uil-eye-slash showHidePw"></i>
                    </div>
                    <div class="input-field">
                        <input type="password" placeholder="Confirm Password"minlength="8" maxlength="28" name="passwordConfirm"  required>
                        <i class="uil uil-lock icon"></i>
                        <i class="uil uil-eye-slash showHidePw"></i>
                    </div>
                        <div class="input-field">
                        <input type="tel" name="phonenumber" id="phone" placeholder="Phone Number" required>
                        <i class="uil uil-phone"></i>
                    </div>
                     <div class="input-field">
                        <input type="text" name="gender" id="gender" placeholder="gender" required>
                        <i class="uil uil-user"></i>
                    </div>
                    <div class="input-field">
                        <input type="text" name="university" id="university" placeholder="university name" required>
                        <i class="uil uil-user"></i>
                    </div>
                    
                

                    <div class="input-field button">
                        <input class="btn" id="submit" type="submit" value="SignUp">
                    </div>
                </form>

                <div class="login-signup">
                    <span class="text">Not a member?
                        <a href="#" class="text login-link">Signup now</a>
                    </span>
                </div>
            </div>
        </div>
    </div>

   <script src="script.js"></script>

</body>
</html>